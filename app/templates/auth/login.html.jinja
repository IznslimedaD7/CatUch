{% extends 'layouts/base.html.jinja' %}
{% from "macros/form/form_wrapper.html.jinja" import form_wrapper with context %}
{% from "macros/form/form_input.html.jinja" import form_input with context %}
{% from "macros/form/form_submit.html.jinja" import form_submit with context %}
{% from "layouts/particles/header.html.jinja" import header_part with context %}

{% block header %}
{{header_part(False)}}
{% endblock %}
{% block content %}
    <h1 class="text-4xl mb-8 text-center font-semibold text-blue-950">Авторизация</h1>
    {% call form_wrapper(action=url_for('auth.auth'))%} 
        {{form.hidden_tag()}}
        {{ form_input(item=form.login)}}
        {{ form_input(item=form.password)}}
        {{ form_input(item=form.remember)}}
        {{ form_submit(text='Войти')}}
    {% endcall %}
    <a class="inline-block rounded-full bg-blue-950 text-3xl text-white ml-16 p-4" href="{{url_for('auth.registration')}}">Зарегистрироваться</a>
{% endblock %}